/**app.wxss**/
page {
 font-family: '微软雅黑'
} 

.top {
    width: 100%;
    height: 106rpx;
    position: fixed;
    top: 0rpx;
    z-index:10;
}
.top .logo{
  float: left;
  margin-top: 20rpx
}
.top .logo image{
  height: 60rpx;
  width: 256rpx;
  margin: 10rpx
}
.menu_btn{
  width: 52rpx;
  position: absolute;
  right: 20rpx;
  top: 30rpx;
  height: 106rpx;
}
.menu_btn text{
  width: 100%;
    height: 4rpx;
    background-color: #fff;
    position: absolute;
    left: 0;
    opacity: 1;
}
.meun{
  background-color: rgba(0,0,0,.92);
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 9;
    color: #fff;
    
}
.meun_box{
  margin-top: 126rpx;
  overflow: hidden;
}
.meun .meun_box .menuli {
    width: 70%;
    display: inline-block;
    text-decoration: none;
    margin-left: 15%;
    color: #ccc;
    border-bottom: solid 1px rgba(255,255,255,.15);
    font-size: 45rpx;
    padding: 30rpx 0;
    -webkit-animation-duration: .5s;
    animation-duration: .5s;
    -webkit-animation-fill-mode: both;
    animation-fill-mode: both;
    -webkit-animation-name: returnToNormal;
    animation-name: returnToNormal;
}
.meun .meun_box image{
  width: 18rpx;
  height: 30rpx;
   float: right;
    margin-top: 10rpx;
    opacity: .8;
}