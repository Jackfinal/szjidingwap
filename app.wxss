/**app.wxss**/
page {
 font-family: '微软雅黑'
} 

.top {
    width: 100%;
    height: 106rpx;
    position: fixed;
    top: -1rpx;
    z-index:10;
}
.top .logo{
  float: left;
  margin-top: 20rpx
}
.top .logo image{
  height: 60rpx;
  width: 256rpx;
  margin: 10rpx
}
.topBackground{background: #fff;border-bottom: 1px solid rgba(221,221,221,1);}
.topBackground .menu_btn text{
background-color: #000;
}
.menu_btn{
  width: 52rpx;
  position: absolute;
  right: 20rpx;
  top: 30rpx;
  height: 106rpx;
}
.menu_btn text{
  width: 100%;
    height: 4rpx;
    background-color: #fff;
    position: absolute;
    left: 0;
    opacity: 1;
}
.meun{
  background-color: rgba(0,0,0,.92);
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 9;
    color: #fff;
    
}
.meun_box{
  margin-top: 126rpx;
  overflow: hidden;
}
.meun .meun_box .menuli {
    width: 70%;
    display: inline-block;
    text-decoration: none;
    margin-left: 15%;
    color: #ccc;
    border-bottom: solid 1px rgba(255,255,255,.15);
    font-size: 45rpx;
    padding: 30rpx 0;
    -webkit-animation-duration: .5s;
    animation-duration: .5s;
    -webkit-animation-fill-mode: both;
    animation-fill-mode: both;
    -webkit-animation-name: returnToNormal;
    animation-name: returnToNormal;
}
.meun .meun_box image{
  width: 18rpx;
  height: 30rpx;
   float: right;
    margin-top: 10rpx;
    opacity: .8;
}

.footer {
	width: 100%;
	background: #000;
	overflow: hidden
}

.footer_nav {
	width: 100%;
	border-bottom: 1px solid rgba(255,255,255,.2);
	padding: 20rpx 0
}

.footer_nav text {
	width: 25%;
	text-align: center;
	color: #fff;
	display: inline-block;
	font-size: 30rpx
}

.footer_txt {
	width: 96%;
	margin-left: 4%;
	overflow: hidden
}

.footer_txt .li {
	width: 100%;
	border-bottom: 1px solid rgba(255,255,255,.1);
	overflow: hidden;
	float: left;
	color: #999;
	font-size: 30rpx;
	padding: 30rpx 0;
}

.footer_txt .li image {
	width: 30rpx;
  height: 36rpx;
	margin-right: 10rpx;
  position: relative;
  top: 10rpx;
}



.footer_txt .li  {
	color: #999
}

.footer_cop {
	width: 100%;
	text-align: center;
	color: #666;
	font-size: 30rpx;
	padding: 30rpx 0;
	border-top: 1px solid rgba(255,255,255,.15)
}

.case {
	width: 100%;
	overflow: hidden;
	background: #eaf4f1
}

.case_list {
	width: 100%;
	overflow: hidden
}

.case_list .li {
	width: 49.8%;
	float: left;
	position: relative;
	margin-bottom: .4%
}

.case_list .li text {
	width: 100%;
	position: absolute;
	bottom: 0;
	left: 0;
	background: rgba(0,0,0,.5);
	color: #fff;
	font-size: 30rpx;
	text-shadow: 1px 1px 0 #444;
	text-indent: .06rem;
	padding: 10rpx 0
}

.case_list .li image{
  width: 100%;
  height: 310rpx;
}
.case_but {
	width: 40%;
	border: 1px solid #c4d7d1;
	background: #fff;
	border-radius: 5px;
	padding: 8rpx 0;
	margin: 10rpx auto 16rpx auto;
	font-size: 40rpx;
	color: #00947e;
	text-align: center
}