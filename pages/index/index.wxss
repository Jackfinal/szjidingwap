/**index.wxss**/
swiper{ height: 630rpx}
.slide-image{width: 100%; height: 636rpx}

.service {
	width: 100%;
	overflow: hidden
}

.service_title {
	width: 100%;
	height: 100rpx;
	overflow: hidden;
	border-bottom: 1px solid #e6e6e6;
	text-align: center;
	font-size: 50rpx;
	line-height: 100rpx;
}

.service_list {
	width: 100%;
	overflow: auto
}

.service_list .dl {
	width: 100%;
	overflow: hidden;
	border-bottom: 1px solid #e6e6e6;
	padding: 10rpx 0
}

.service_list .dl .dt {
	width: 140rpx;
	overflow: hidden;
	text-align: center;
	font-size: 20rpx;
	color: #333;
	float: left
}

.service_list .dl .dt image {
	width: 100rpx;
  height: 100rpx;
	margin-top: 10rpx
}

.service_list .dl .dd {
	font-size: 30rpx;
	color: #888;
	padding-left: 140rpx;
}

.service_list .dl .dd text {
	font-size: 40rpx;
	color: #333;
	display: block
}