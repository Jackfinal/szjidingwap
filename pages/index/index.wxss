/**index.wxss**/
swiper{ height: 630rpx}
.slide-image{width: 100%; height: 636rpx}

.service {
	width: 100%;
	overflow: hidden
}

.service_title {
	width: 100%;
	height: 100rpx;
	overflow: hidden;
	border-bottom: 1px solid #e6e6e6;
	text-align: center;
	font-size: 50rpx;
	line-height: 100rpx;
}

.service_list {
	width: 100%;
	overflow: auto
}

.service_list .dl {
	width: 100%;
	overflow: hidden;
	border-bottom: 1px solid #e6e6e6;
	padding: 10rpx 0
}

.service_list .dl .dt {
	width: 140rpx;
	overflow: hidden;
	text-align: center;
	font-size: 20rpx;
	color: #333;
	float: left
}

.service_list .dl .dt image {
	width: 100rpx;
  height: 100rpx;
	margin-top: 10rpx
}

.service_list .dl .dd {
	font-size: 30rpx;
	color: #888;
	padding-left: 140rpx;
}

.service_list .dl .dd text {
	font-size: 40rpx;
	color: #333;
	display: block
}



.case {
	width: 100%;
	overflow: hidden;
	background: #eaf4f1
}

.case_list {
	width: 100%;
	overflow: hidden
}

.case_list .li {
	width: 49.8%;
	float: left;
	position: relative;
	margin-bottom: .4%
}

.case_list .li text {
	width: 100%;
	position: absolute;
	bottom: 0;
	left: 0;
	background: rgba(0,0,0,.5);
	color: #fff;
	font-size: 30rpx;
	text-shadow: 1px 1px 0 #444;
	text-indent: .06rem;
	padding: 10rpx 0
}

.case_list .li image{
  width: 100%;
  height: 310rpx;
}
.case_but {
	width: 40%;
	border: 1px solid #c4d7d1;
	background: #fff;
	border-radius: 5px;
	padding: 8rpx 0;
	margin: 10rpx auto 16rpx auto;
	font-size: 40rpx;
	color: #00947e;
	text-align: center
}


.client {
	width: 100%;
	overflow: hidden
}
.client_news {
	width: 100%;
	overflow: hidden
}

.client_news .li {
	width: 100%;
	border-bottom: 1px solid #ddd;
	text-indent: 10rpx;
	padding: 8rpx 0;
	font-size: 30rpx
}

.client_news_but {
	overflow: hidden;
	padding: 10rpx 0 12rpx 10rpx;
	font-size: 30rpx;
  color: #0096e2;
}


.indexabout {
	width: 100%;
	background: #f6f6f6;
	overflow: hidden
}

.indexabout_txt {
	width: 95%;
	overflow: hidden;
	margin: .06rem auto 0 auto;
	font-size: 30rpx;
	line-height: 30rpx
}

.indexabout_txt image {
	width: 210rpx;
  height: 210rpx;
	margin-right: 10rpx;
	margin-top: 10rpx;
  float:left;
}
.indexabout_about{

}
.indexabout_but {
	overflow: hidden;
	padding: .03rem 0 .15rem .1rem;
	font-size: .12rem
}


.client_shuzi {
	width: 100%;
	overflow: hidden;
	padding: 36rpx 0 40rpx 0
}

.client_shuzi_left {
	width: 25%;
	float: left;
	text-align: center;
	font-size: 30rpx;
	color: #999
}

.client_shuzi_left text {
	font-size: 80rpx;
	display: block;
	line-height:  80rpx;
}

.client_shuzi_con {
	width: 25%;
	float: left;
	text-align: center;
	font-size: 30rpx;
	color: #999
}

.client_shuzi_con text {
	font-size: 80rpx;
	display: block;
	line-height: 80rpx;
	position: relative
}

.client_shuzi_right {
	width: 25%;
	float: right;
	text-align: center;
	font-size: 20rpx;
	color: #999
}

.client_shuzi_right text {
	font-size:  80rpx;
	display: block;
	line-height:  70rpx;
}

